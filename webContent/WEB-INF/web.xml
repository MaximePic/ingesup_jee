<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- LOGIN -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>maBanque.servlet.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Accueil -->
    <servlet>
        <servlet-name>AccueilServlet</servlet-name>
        <servlet-class>maBanque.servlet.Accueil</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccueilServlet</servlet-name>
        <url-pattern>/accueil</url-pattern>
    </servlet-mapping>

    <!-- Credit -->
    <servlet>
        <servlet-name>CreditServlet</servlet-name>
        <servlet-class>maBanque.servlet.Credit</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreditServlet</servlet-name>
        <url-pattern>/credit</url-pattern>
    </servlet-mapping>

    <!-- Debit -->
    <servlet>
        <servlet-name>DebitServlet</servlet-name>
        <servlet-class>maBanque.servlet.Debit</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DebitServlet</servlet-name>
        <url-pattern>/debit</url-pattern>
    </servlet-mapping>

    <!-- Detail -->
    <servlet>
        <servlet-name>DetailServlet</servlet-name>
        <servlet-class>maBanque.servlet.Detail</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailServlet</servlet-name>
        <url-pattern>/detail</url-pattern>
    </servlet-mapping>

    <!-- Virment -->
    <servlet>
        <servlet-name>VirementServlet</servlet-name>
        <servlet-class>maBanque.servlet.Virement</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VirementServlet</servlet-name>
        <url-pattern>/virement</url-pattern>
    </servlet-mapping>
</web-app>